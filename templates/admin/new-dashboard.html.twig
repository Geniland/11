    var totalPrice = 0; // Variable pour suivre le total des prix
        var cartItemCount = 0; // Initialiser le nombre d'articles dans le panier

        // Mettre à jour le nombre d'articles dans le panier
        function updateCartItemCount() {
            $('#cart-item-count').text(cartItemCount);
        }

        // Fonction pour ajouter un produit au panier
        function addToCart(price, name, etat, image) {
            // Ajouter le prix du produit au total des prix
            totalPrice += price;

            // Mettre à jour l'affichage du total des prix
            $('#total-price').text(totalPrice.toFixed(2) + ' FCFA');

            // Construire la chaîne de texte pour la nouvelle ligne du tableau
            var productRow = '<tr>' +
                '<td><img src="' + image + '" class="cart-image" alt="Product"></td>' +
                '<td>' + name + '</td>' +
                '<td>' + price + ' FCFA</td>' +
                '<td>' + etat + '/10</td>' +
                '<td><button class="btn btn-danger btn-sm remove-from-cart">Supprimer</button></td>' +
                '</tr>';

            // Ajouter la nouvelle ligne au tableau
            $('.cart-items').append(productRow);

            // Mettre à jour le nombre d'articles dans le panier
            cartItemCount++;
            updateCartItemCount();
        }

        // Fonction pour supprimer un produit du panier
        function removeFromCart(price) {
            totalPrice -= price;

            // Mettre à jour l'affichage du total des prix après avoir supprimé le produit du panier
            $('#total-price').text(totalPrice.toFixed(2) + ' FCFA');

            // Mettre à jour le nombre d'articles dans le panier
            if (cartItemCount > 0) {
                cartItemCount--;
            }
            updateCartItemCount();
        }

        // Écouter le clic sur le bouton "Ajouter au panier"
        $('.add-to-cart').on('click', function() {
            var elementId = $(this).data('id');
