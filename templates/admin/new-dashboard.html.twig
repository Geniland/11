            var name = $(this).data('nom');
            var etat = $(this).data('etat');
            var image = $(this).data('image');

            console.log(image);

            // Appeler la fonction pour ajouter le produit au panier
            addToCart(price, name, etat, image);

            $('#product-image').attr('src', image);



            
        });

        // Écouter le clic sur le bouton "Supprimer" dans le panier
        $('.cart-items').on('click', '.remove-from-cart', function() {
            var priceToRemove = parseFloat($(this).closest('tr').find('td:nth-child(3)').text());
            
            // Appeler la fonction pour supprimer le produit du panier
            removeFromCart(priceToRemove);

            // Supprimer la ligne du produit du panier
            $(this).closest('tr').remove();
        });
